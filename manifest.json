{
    "name": "LazyLink",
    "description": "One-click saving for links you want to revisit. Keep articles, videos, and resources organized and accessible whenever you need them.",
    "version": "0.2.2",
    "manifest_version": 3,
    "permissions": [
        "tabs",
        "storage",
        "contextMenus",
        "notifications",
        "activeTab",
        "scripting"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_popup": "app.html",
        "default_icon": "app_icon.png"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content.js"
            ],
            "all_frames": true
        }
    ]
}